@model Auction
@{
    ViewData["Title"] = "Leilão";
}
<div class="container mt-5">
    <h2>Cadastro de Leilão</h2>
    <form asp-controller="Auction" asp-action="CreateAuction" method="post">
        <div class="form-group">
            <label for="leilaoNome">Nome do Leilão</label>
            <input type="text" class="form-control" id="leilaoNome" asp-for="Name" placeholder="Digite o nome do leilão" required>
        </div>
        <div class="form-group">
            <label for="descricao">Descrição</label>
            <textarea class="form-control" id="descricao" rows="3" asp-for="Description" placeholder="Descrição do leilão" required></textarea>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="dataHoraInicio" class="form-label">Data e Hora de Início</label>
                    <input type="datetime-local" class="form-control" id="dataHoraInicio" asp-for="DateStart" required>
                </div>
            </div>
            <div class="col-md-6">
                <div class="mb-3">
                    <label for="dataHoraFim" class="form-label">Data e Hora de Término</label>
                    <input type="datetime-local" class="form-control" id="dataHoraFim" asp-for="DateEnd" required>
                </div>
            </div>
        </div>

        <div class="form-group">
            <label for="leilaoNome">Local</label>
            <input type="text" class="form-control" id="leilaoNome" asp-for="Local" placeholder="Digite o local do leilão" required>
        </div>
        <div class="form-group">
            <label for="valorInicial">Valor Inicial</label>
            <input type="number" class="form-control" id="valorInicial" placeholder="Valor inicial do leilão" required>
        </div>
        <div class="form-group">
            <label for="categoria">Categoria</label>
            <select class="form-control" id="categoria" asp-for="Type" required>
                <option value="">Selecione a categoria</option>
                <option value="carros">Carros</option>
                <option value="imoveis">Imóveis</option>
            </select>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Cadastrar</button>
    </form>
</div>