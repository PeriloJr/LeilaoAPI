@model List<Client>
@{
    ViewData["Title"] = "Gerenciamento de usuários";
}

<a class="btn btn-primary" role="button" asp-controller="Client" asp-action="ClientRegister">Cadastrar usuário</a>

<p class="h1">Usuários</p>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Nome</th>
            <th scope="col">CPF</th>
            <th scope="col">Email</th>
            <th scope="col">Telefone</th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null && Model.Any())
        {
            foreach(Client item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.CPF</td>
                    <td>@item.Email</td>
                    <td>@item.Contact</td>
                    <td><a role="button" class="btn btn-primary" asp-route-id="@item.Id" asp-controller="Auction" asp-action="Details">Atualizar</a></td>
                </tr>
            }
        }
    </tbody>
</table>