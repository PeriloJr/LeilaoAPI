@model Client
@{
    ViewData["Title"] = "Cadastro de usuários";
}

<div class="container mt-5">
    <h2>Cadastro de Usuário</h2>
    <form asp-controller="Client" asp-action="CreateClient" method="post">
        <div class="mb-3">
            <label for="nome" class="form-label">Nome Completo</label>
            <input type="text" class="form-control" id="nome" asp-for="Name" required>
        </div>

        <div class="mb-3">
            <label for="cpf" class="form-label">CPF</label>
            <input type="text" class="form-control" id="cpf" asp-for="CPF" required maxlength="14" placeholder="000.000.000-00">
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">E-mail</label>
            <input type="email" class="form-control" id="email" asp-for="Email" required>
        </div>

        <div class="mb-3">
            <label for="telefone" class="form-label">Telefone</label>
            <input type="tel" class="form-control" id="telefone" asp-for="Contact" required placeholder="(99) 99999-9999">
        </div>

        <button type="submit" class="btn btn-primary">Cadastrar</button>
    </form>
</div>